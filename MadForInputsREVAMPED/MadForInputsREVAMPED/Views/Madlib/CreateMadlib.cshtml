@{
    ViewData["Title"] = "Form Page";
}

<form method="post">
    <div class="border p-3 mt-4">
        @*___MADLIB FORM HEADER___*@
        <div class="row pb-2">
            <h2 class="text-primary">Create MadLib</h2>
            <hr />
            <br />
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>

        @*___GENRE SELECTOR / DROPDOWN___*@
        <div class="mb-4">
            <label>Select a Genre</label>
            <select id="genreSelector" class="form-select" name="selectedGenre">
                <option selected>Random</option>
                <option value="1">Adventure</option>
                <option value="2">Comedy</option>
                <option value="3">Horror</option>
                <option value="4">Romance</option>
                <option value="5">Random</option>
            </select>
        </div>

        @*___PARTIAL FORMS___*@
        <div class="mb-4">
            @if (Model.selectedGenre == 1)
            {
                <partial name="_AdventureForm" />
            }
            else if (Model.selectedGenre == 2)
            {
                <partial name="_ComedyForm" />
            }
            else if (Model.selectedGenre == 3)
            {
                <partial name="_HorrorForm" />
            }
            else if (Model.selectedGenre == 4)
            {
                <partial name="_RomanceForm" />
            }
            else
            {
                <partial name="_RandomForm" />
            }
        </div>

        <div class="mb-2">
            <button type="submit" class="btn btn-primary" style="width: 150px">Create</button>
        </div>
    </div>
</form>