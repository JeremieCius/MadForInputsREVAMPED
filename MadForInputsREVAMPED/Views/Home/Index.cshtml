@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="mt-5 mb-5">
        <h1 class="display-3">Welcome to Madlib REVAMPED</h1>
    </div>
    <hr />
    <div class="d-flex justify-content-center align-content-center">
        <div class="col mt-5">
            <h2 class="">Take a look at all the amazing stories generated by our users!</h2>
